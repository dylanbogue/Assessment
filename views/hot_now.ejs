<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
        }

        header {
            background-color: #3dd9ce;
            padding: 1em;
            text-align: center;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-family: Georgia, 'Times New Roman', Times, serif;

        }

        nav {
            display: flex;
        }

        button {
            margin-left: 20px;
            background-color: #3b3d3d;
            color: #3dd9ce;
            padding: 20px 32px;
            font-size: larger;
            font-family: Georgia, 'Times New Roman', Times, serif;
        }

        footer {
            background-color: #000000;

            padding: 1em;
            text-align: center;
        }

        main {
            background-color: #000000;
            padding: 5em;
            display: flex;
            align-items: center;
            color: goldenrod;
            font-family: Georgia, 'Times New Roman', Times, serif;
        }

        main div {
            flex: 1;
        }

        img {
            max-width: 30%;
            /* Ensure the image doesn't exceed its container */
            margin-left: 20px;


        }

        h1 {
            font-size: 45px;
        }

        h2 {
            font-size: xx-large;
        }

        /* Updated styles for horizontal layout */
        .flex.four {
            display: flex;
        }

        .flex.four>div {
            flex: 1;
            margin: 0 10px;
            /* Adjust margin as needed */
        }
    </style>
</head>

<body>

    <div class="header">
        <header>
            <h1><b>TradetheCart</b></h1>
            <nav>
                <!-- Update the like button onclick attribute -->
                <button class="button" onclick="likeAndEmail('Tyranitar')">Like</button>
                <button class="button" onclick="likeAndEmail('Blissey')">Like</button>
                <button class="button" onclick="likeAndEmail('Ampharos')">Like</button>

            </nav>
        </header>
    </div>


    <h3>Trending Now..</h3>

    <div class="flex four">
        <div>
            <article class="card">
                <img src="https://assets.tcgdex.net/en/neo/neo2/12/low.webp">
                <h3>Tyranitar</h3>
                <button class="button" onclick="email('Tyranitar')">Emial</button>
                <button class="button" onclick="like('card1')">Like</button>
                <p id="likeCount_card1">8 likes</p>
            </article>
        </div>
        <div>
            <article class="card">
                <img src="https://assets.tcgdex.net/en/neo/neo3/2/low.webp">
                <h3>Blissey</h3>
                <button class="button" onclick="like('card2')">Like</button>
                <p id="likeCount_card2">0 likes</p>
            </article>
        </div>
        <div>
            <article class="card">
                <img src="https://assets.tcgdex.net/en/neo/neo3/1/low.webp">
                <h3>Ampharos</h3>
                <button class="button" onclick="like('card3')">Like</button>
                <p id="likeCount_card2">0 likes</p>
            </article>
        </div>

    </div>

    <script>


    async function email(cardName) {
        try {
            const response = await fetch(`http://localhost:3000/get-email/${cardName}`);
            const data = await response.json();

            if (response.ok) {
                const email = data.email;
                window.location.href = `mailto:${email}`;
            } else {
                console.error(data.error);
            }
        } catch (error) {
            console.error(error);
        }
    }





        // JavaScript code for handling likes
        let likeCounts = {
            card1: 8,
            card2: 0,
            card3: 4,
            // Add more cards as needed
        };

        function like(cardId) {
            likeCounts[cardId]++;
            updateLikeCount(cardId);
        }

        function updateLikeCount(cardId) {
            const likeCountElement = document.getElementById(`likeCount_${cardId}`);
            likeCountElement.textContent = `${likeCounts[cardId]} like${likeCounts[cardId] !== 1 ? 's' : ''}`;
        }

        
    </script>

</body>

</html>